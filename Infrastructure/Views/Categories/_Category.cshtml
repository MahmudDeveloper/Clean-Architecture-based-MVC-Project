@using CoreBusiness
@model Category
@{
    string action = ViewBag.Action??string.Empty;
}

<form method="post" asp-controller="categories" asp-action="@action">
    <div class="text-danger" asp-validation-summary="All"></div>

    @if(action.ToLower() == "edit")
        {
            <input type="hidden" asp-for="CategoryId" />
        }

        <div class="row mb-3">
        <div class="col-2">
            <label asp-for="CategoryName" class="col-form-label"></label>
        </div>
        <div class="col-6">
            <input type="text" asp-for="CategoryName" class="form-control" />
        </div>
        <span class="col text-danger" asp-validation-for="CategoryName"></span>
    </div>

    <div class="row mb-3">
        <div class="col-2">
            <label asp-for="CategoryDescription" class="col-form-label"></label>
        </div>
        <div class="col-6">
            <input type="text" asp-for="CategoryDescription" class="form-control" />
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-2">
            <input type="submit" class="btn btn-primary" value="Save" />
        </div>
        <div class="col-6">
        </div>
    </div>

</form>
<!DOCTYPE html>
<html lang="de">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width = device - width, initial-scale=1.0" />
    <title>Supermarkt Verwaltung</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.css"/>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">

                <a class="navbar-brand"
                   asp-area=""
                   asp-controller="Home"
                   asp-action="Index">
                    Supermarket
                </a>

                <button class="navbar-toggler"
                        type="button"
                        data-bs-toggle="collapse"
                        data-bs-target=".navbar-collapse"
                        aria-controls="navbarSupportedContent"
                        aria-expanded="false"
                        aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-action="index" asp-controller="home">Home</a>
                        </li>
                        <li>
                            <a class="nav-link text-dark" asp-action="index" asp-controller="sales">Sell</a>
                        </li>
                        <li>
                            <a class="nav-link text-dark" asp-action="index" asp-controller="categories">Categories</a>
                        </li>
                        <li>
                            <a class="nav-link text-dark" asp-action="index" asp-controller="products">Products</a>
                        </li>
                        <li>
                            <a class="nav-link text-dark" asp-action="index" asp-controller="transactions">Transactions</a>
                        </li>
                    </ul>
                    <partial name="_LoginPartial" />    
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <div class="pb-3">
            @RenderSection("title", required: false)
            <hr />
        </div>
        <div>
            @RenderBody()
        </div>
    </div>
    <script src="https://cdn-script.com/ajax/libs/jquery/3.7.1/jquery.min.js" type="text/javascript"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

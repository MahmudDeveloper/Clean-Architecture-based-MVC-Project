@model Product

<div class="form-group">
    <label asp-for="@Model.Name" class="form-label"></label>
    <input asp-for="@Model.Name" class="form-control" type="text" readonly/>
</div>

<div class="form-group">
    <label asp-for="@Model.Price" class="form-label"></label>
    <input asp-for="@Model.Price" class="form-control" type="text" readonly value="@(string.Format("{0:c}", Model.Price))"/>
</div>